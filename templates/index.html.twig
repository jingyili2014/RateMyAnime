<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


    <title>RateMyAnime Main Page</title>
    <style>
      body {
        background-color: #eee;
      }

      .theme-green-bg {
        background-color: #2d8659;
      }

      .theme-green-color {
        color: #2d8659;
      }

      .cate-menu .active {
        color: #2d8659;
        border-bottom: 2px solid #2d8659;
      }

      .cate-btn a {
        color: #6c757d;
      }

      .cate-btn a:hover {
        color: #2d8659;
        font-size: 1.1rem;
      }

      .rating {
        color: #e6e600;
        font-size: 0.8rem;
      }

      .rate-btn a {
        color: #2d8659;
        text-decoration: none;
      }






    </style>
  </head>
  <body>

  <nav class="navbar navbar-expand-lg navbar-light theme-green-bg">
    <a class="navbar-brand text-white" href="/anime/">{{name}}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto mr-5">
        <li class="nav-item active mr-3">
          <a class="nav-link text-white" href="#">Anime A-Z</a>
        </li>

        <li class="nav-item mr-3">
          <a class="nav-link text-white" href="./rank">Ranking</a>
        </li>

        <li class="nav-item mr-3">
          <a class="nav-link text-white" href="#">Event</a>
        </li>

        <li class="nav-item mr-3">
          <a class="nav-link text-decoration-none" style="color:white" href="#">Comment</a>
        </li>

        <li class="nav-item ml-5">
          <a class="nav-link text-white" href="./login">
            <i class="fas fa-user"></i>
          </a>
        </li>

      </ul>
    </div>
  </nav>





<div class="container justify-content-center d-flex" style="height: 10rem">
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control rounded border-white mr-1" type="search" placeholder="Search.." aria-label="Search">
    <button class="btn my-2 text-white rounded theme-green-bg" type="submit">
      <i class="fas fa-search"></i>
    </button>
  </form>
</div>




<div class="container-fluid p-0 position-relative">
  <img src="/anime/images/banner.jpg" class="w-100" alt="banner">
  <div class="position-absolute" style="left: 3rem; bottom: 2rem">
    <h4 class="text-white mb-4">Attack On Titan</h4>
    <p class="text-light"><span class="mr-3">Action, Adventure‎, Fantasy</span> | <span class="ml-1">Release: 2013-04-07</span></p>
    <button class="btn btn-secondary theme-green-bg border-0 px-5">
      <a class="text-decoration-none text-white" href="/anime/anime/get/1">View Info</a>
    </button>
  </div>
  <div class="position-absolute border border-light p-2 rounded" style="right: 5rem; bottom: 2rem">
    <p>
      <span class="text-white">Rating</span>
      <small class="text-secondary ml-2">Based on 5000 views</small>
      <p class="text-white">Score 
        <span class="ml-3">4.5</span>
        <span class="rating pl-1">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star-half-alt"></i>
          <i class="far fa-star"></i>
        </span>
      </p>
    </p>
  </div>
</div>




<div class="container-fluid">

  <div class="row my-4 mx-5 cate-menu">
    <div class="col-12">
      <div class="container-fluid">
        <div class="row text-center" style="border-bottom: 0.5px solid #ccc; line-height: 2.5rem">
          {% for id, name in categories %}
            <div class="col-md-1 col-12 p-0 cate-btn  
            {% if c_id == id %}
              active
            {% endif %} 
            ">
              <a class="text-decoration-none" href="/anime/genre/get/{{ id }}">
                {{ name }}
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>


  <div class="row mx-4 px-4">
    {% for anime in animes %}
      <div class="col-12 col-md-3 my-4">
        <div class="card">
          <a href="/anime/anime/get/{{anime.id}}">
            <img src="/anime/images/{{ anime.widget_url }}" class="card-img-top w-100" alt="card1">
          </a>
          
          <div class="card-body">
            <div class="float-right border border-success rounded px-2 py-1 mt-2 rate-bg">
              <span class="rate-btn">
                <a href="./rank">
                  {{ (anime.total_score / anime.score_num) | number_format(1, '.', ',')}}
                </a>
              </span>
            </div>

            <div class="py-2">
              {% if (anime.total_score // anime.score_num) == 5 %}
                <span class="rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </span>
              {% elseif (anime.total_score // anime.score_num) == 4 %}
                <span class="rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </span>
              {% elseif (anime.total_score // anime.score_num) == 3 %}
                <span class="rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </span>
              {% elseif (anime.total_score // anime.score_num) == 2 %}
                <span class="rating">
                  <i class="fas fa-star"></i>
                </span>
              {% else %}
                <span></span>
              {% endif %}

              {% if (anime.total_score % anime.score_num) != 0%}
                <span class="rating">
                  <i class="fas fa-star-half-alt"></i>
                </span>
              {% else %}
                <span class="rating">
                  <i class="fas fa-star"></i>
                </span>
              {% endif %}

              {% if (anime.total_score // anime.score_num) == 5 %}
                <span class="rating">
                  <i class="far fa-star"></i>
                </span>
              {% elseif (anime.total_score // anime.score_num) == 4 %}
                <span class="rating">
                  <i class="far fa-star"></i>
                </span>
              {% elseif (anime.total_score // anime.score_num) == 3 %}
                <span class="rating">
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                </span>
              {% elseif (anime.total_score // anime.score_num) == 2 %}
                <span class="rating">
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                </span>
              {% else %}
                <span></span>
              {% endif %}
            </div>
            <h6 class="card-title">{{ anime.name }}<br><br></h6>
            <p class="card-text text-secondary" style="font-size: 0.7rem">
              {% set genres = anime.genre | split(',') %}
              {% for ge in genres %}
                <a class="mr-2" href="/anime/genre/get/{{ ge }}">{{ categories[ge] }}</a>
              {% endfor %}
            </p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>


  <div class="container-fluid justify-content-center d-flex">
    <div class="row my-5 mx-5">
      <button class="btn btn-secondary theme-green-bg border-0 px-3 py-2" href="#">Next Page
        <i class="fas fa-chevron-right"></i>
      </button>
    </div> 
  </div>
</div>






<!-- Footer -->
<footer class="page-footer font-small theme-green-bg darken-8 text-center">

  <div class="container-fluid">
    <!-- Grid row-->
    <div class="row mt-5">
      <!-- Grid column -->
      <div class="col-md-12 py-5">
        <div class="mb-5 small">

          <a class="fb-ic text-white text-decoration-none" href="#">
